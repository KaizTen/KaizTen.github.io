{
    "title": "Interval Scheduling Problem",
    "description": "Description of instances of the Interval Scheduling Problem",
    "type": "object",
    "properties": {
        "flights": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 7
                    },
                    "employees": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 100
                    },
                    "startTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "finishTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "serviceTime": {
                        "type": "string",
                        "format": "duration"
                    }
                },
                "required": [
                    "code",
                    "employees",                    
                    "startTime",
                    "finishTime",
                    "serviceTime"
                ]
            }
        },
        "airport": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3,
            "pattern": "^[A-Z]{3}$"
        }
    },
    "required": [
        "flights"
    ]
}