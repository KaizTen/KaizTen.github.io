{
    "$schema": "https://json-schema.org/draft/2020-12",
    "title": "Employee Scheduling Problem",
    "description": "Description of instances of the Employee Scheduling Problem",
    "type": "object",
    "properties": {
        "flights": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 7
                    },
                    "employees": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 100
                    },
                    "startTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "finishTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "serviceTime": {
                        "type": "duration"
                    }
                },
                "required": [
                    "code",
                    "employees",                    
                    "startTime",
                    "finishTime",
                    "serviceTime"
                ]
            }
        },
        "employees": {
            "type": "object",
            "properties": {
                "individuals": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": true,
                        "properties": {
                            "code": {
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 4
                            },
                            "timePerDay": {
                                "type": "duration"
                            },
                            "timePerWeek": {
                                "type": "duration"
                            },
                            "timeBetweenWorkingDays": {
                                "type": "duration",
                                "minimum": 0
                            },
                            "startTime": {
                                "type": "string",
                                "format": "time"
                            },
                            "finishTime": {
                                "type": "string",
                                "format": "time"
                            },
                            "enterTime": {
                                "type": "duration"
                            },
                            "breakTime": {
                                "type": "duration"
                            },
                            "leaveTime": {
                                "type": "duration"
                            },
                            "notAvailableDates": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "format": "date"
                                }
                            }
                        },
                        "required": [
                            "code",                           
                            "timePerDay",
                            "timePerWeek"                        
                        ]
                    }
                },
                "parameters": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                        "enterTime": {
                            "type": "duration"
                        },
                        "breakTime": {
                            "type": "duration"
                        },
                        "leaveTime": {
                            "type": "duration"
                        },
                        "timeBetweenWorkingDays": {
                            "type": "duration"
                        }
                    },
                    "required": [
                        "enterTime",
                        "breakTime",
                        "leaveTime",
                        "timeBetweenWorkingDays"                        
                    ]
                }
            }
        },
        "airport": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3,
            "pattern": "^[A-Z]{3}$"
        }
    },
    "required": [
        "flights",
        "employees"
    ]
}