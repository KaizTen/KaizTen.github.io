{
  "title": "Persons with Reduced Mobility Problem",
  "description": "Definition of instances of the Persons with Reduced Mobility Problem",
  "type": "object",
    "properties": {
        "services": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 7
                    },
                    "agents": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 100
                    },
                    "startTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "finishTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "serviceTime": {
                        "type": "string",
                        "format": "duration"
                    }
                },
                "required": [
                    "code",
                    "agents",                    
                    "startTime",
                    "finishTime"
                ]
            }
        },
        "agents": {
            "type": "object",
            "properties": {
                "individuals": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": true,
                        "properties": {
                            "code": {
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 4
                            },
                            "timePerDay": {
                                "type": "string",
                                "format": "duration"
                            },
                            "timePerWeek": {
                                "type": "string",
                                "format": "duration"
                            },
                            "timeBetweenWorkingDays": {
                                "type": "string",
                                "format": "duration"
                            },
                            "startTime": {
                                "type": "string",
                                "format": "time"
                            },
                            "finishTime": {
                                "type": "string",
                                "format": "time"
                            },
                            "notAvailableDates": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "format": "date"
                                }
                            }
                        },
                        "required": [
                            "code",                           
                            "timePerDay",
                            "timePerWeek"                        
                        ]
                    }
                }
            }
        },
        "airport": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3,
            "pattern": "^[A-Z]{3}$"
        }
    },
    "required": [
        "services",
        "agents"
    ]
}